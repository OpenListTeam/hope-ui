{
  "name": "hope-ui",
  "version": "0.0.0",
  "private": false,
  "description": "The SolidJS component library you've hoped for.",
  "keywords": [
    "solidhack",
    "best_ecosystem",
    "solid",
    "solidjs",
    "ui",
    "framework",
    "frontend",
    "components"
  ],
  "homepage": "https://hope-ui.com",
  "bugs": {
    "url": "https://github.com/fabien-ml/hope-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabien-ml/hope-ui.git"
  },
  "license": "MIT",
  "author": "Fabien MARIE-LOUISE (https://github.com/fabien-ml)",
  "contributors": [
    {
      "name": "Fabien MARIE-LOUISE",
      "email": "fabienml.dev@gmail.com"
    }
  ],
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "build:lib": "npm run build -w packages/solid",
    "build:site": "npm run build -w apps/site",
    "commit": "git-cz",
    "dev:site": "npm run dev -w apps/site",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --ignore-path .gitignore",
    "prepare": "husky install",
    "test:unit": "jest --watch",
    "test:unit:ci": "jest",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --write"
    ],
    "package.json": "npx sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@babel/core": "7.16.7",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "16.0.2",
    "@commitlint/config-conventional": "16.0.0",
    "@commitlint/cz-commitlint": "16.0.0",
    "@stitches/core": "1.2.7",
    "@storybook/addon-a11y": "6.4.12",
    "@storybook/addon-actions": "6.4.12",
    "@storybook/addon-essentials": "6.4.12",
    "@storybook/addon-links": "6.4.12",
    "@storybook/builder-webpack5": "6.4.12",
    "@storybook/html": "6.4.12",
    "@storybook/manager-webpack5": "6.4.12",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/user-event": "13.5.0",
    "@types/body-scroll-lock": "3.1.0",
    "@types/jest": "27.4.0",
    "@types/lodash.merge": "4.6.6",
    "@types/node": "17.0.8",
    "@types/prismjs": "1.26.0",
    "@types/scroll-lock": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "babel-loader": "8.2.3",
    "babel-preset-solid": "1.3.2",
    "commitizen": "4.2.4",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-solid": "0.4.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "solid-js": "1.3.12",
    "solid-testing-library": "0.2.1",
    "solid-transition-group": "0.0.8",
    "sort-package-json": "1.53.1",
    "storybook-dark-mode": "1.0.8",
    "ts-jest": "27.1.3",
    "typescript": "4.5.4",
    "vite": "2.7.11",
    "vite-plugin-dts": "1.0.5",
    "vite-plugin-prismjs": "0.0.8",
    "vite-plugin-solid": "2.2.2"
  },
  "info": "Hope UI is a composable and accessible component library for SolidJS with a style props API, theming, dark mode and following WAI ARIA 1.2 design patterns"
}
